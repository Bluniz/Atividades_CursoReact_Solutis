<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My CRUD in NodeJS</title>
  </head>
  <body>
    <h2>Registros</h2>
    <table border="1">
      <thead>
        <tr>
          <td>Nome</td>
          <td>Preço</td>
          <td>Ação</td>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function(details) { %>
        <tr>
          <td><%= details.name %></td>
          <td>R$ <%= details.price %></td>
          <td>
            <a href="/product/edit/<%= details._id %>">Editar</a> -
            <a href="/product/delete/<%= details._id %>">Deletar</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <button><a href="/">Novo usuário</a></button>
    <button><a href="/product">Novo produto</a></button>
  </body>
</html>
